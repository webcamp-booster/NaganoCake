<div class='container my-5'>
  
  <h4 class='row mb-5'>
    <span class='heading-title'><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</span>
  </h4>
  
  <%= render 'layouts/errors', obj: @customer %>
  
  <%= form_with model: [:admin, @customer], class: 'ml-5' do |f| %>
  
    <div class='row form-group'>
      <label class='col-2'>会員ID</label>
      <div class='col-3'>
        <%= @customer.id %>
      </div>
    </div>
    
    <div class='row form-group'>
      <label class='col-2'>氏名</label>
      <%= f.text_field :last_name, class: 'form-control col-3' %>
      <%= f.text_field :first_name, class: 'form-control col-3 ml-5' %>
    </div>
    
    <div class='row form-group'>
      <label class='col-2'>フリガナ</label>
      <%= f.text_field :last_name_kana, class: 'form-control col-3' %>
      <%= f.text_field :first_name_kana, class: 'form-control col-3 ml-5' %>
    </div>
    
    <div class='row form-group'>
      <label class='col-2'>郵便番号</label>
      <%= f.text_field :post_code, class: 'form-control col-3' %>
    </div>
    
    <div class='row form-group'>
      <label class='col-2'>住所</label>
      <%= f.text_field :address, class: 'form-control col-7' %>
    </div>
    
    <div class='row form-group'>
      <label class='col-2'>電話番号</label>
      <%= f.text_field :telephone_number, class: 'form-control col-3' %>
    </div>
    
    <div class='row form-group'>
      <label class='col-2'>メールアドレス</label>
      <%= f.text_field :email, class: 'form-control col-3' %>
    </div>
    
    <div class='row form-group'>
      <label class='col-2'>会員ステータス</label>
      <div class="custom-control custom-radio custom-control-inline">
      <%= f.radio_button :is_active, true, checked: @customer.is_active == true, class: 'custom-control-input', id: 'status-active' %>
      <%= f.label :is_active, '有効', class: 'custom-control-label', for: 'status-active' %>
      </div>
      <div class="custom-control custom-radio custom-control-inline">
        <%= f.radio_button :is_active, false, checked: @customer.is_active == false, class: 'custom-control-input', id: 'status-deleted' %>
        <%= f.label :is_active, '退会', class: 'custom-control-label', for: 'status-deleted' %>
      </div>
    </div>
    
    <div class='row form-group'>
      <div class='col-2'></div>
      <%= f.submit '変更を保存', class: 'btn btn-success' %>
    </div>
    
  <% end %>
  
</div>