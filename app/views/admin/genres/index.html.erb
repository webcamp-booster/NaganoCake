<h4 class="m-5 bg-light">ジャンル一覧・追加</h4>

<div class ="row">
  <%= form_with model: [:admin, @genre], class: 'form-group' do |f| %>
    <div class="col-12">
    <%= f.label :name, "ジャンル名", class: 'form-label' %>
      <%= f.text_field :name, placeholder: 'ジャンル名' %>
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-4">
    <table class="table ">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td>
            <%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-success' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>