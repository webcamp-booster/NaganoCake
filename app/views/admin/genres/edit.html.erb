<h2>ジャンル編集</h2>


<div>
  <%= form_with model: [:admin, @genre], class: 'form-group' do |f| %>
    <%= f.label :name, "ジャンル名", class: 'form-label' %>
    <div class="form-group">
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.submit "変更を保存", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>