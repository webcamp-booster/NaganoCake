<div class="container takasa">
  <h2>注文履歴一覧</h2><br>
	<table class="table table-hover">
	  <tr class="active">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文ステータス</th>
      <th></th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime("%Y年%m月%d日") %></td>
      <td>
        <%= link_to admin_customer_orders_path(id: order.customer_id) do %>
          <%= order.customer.last_name %>
        <% end %>
      </td>
      <td><%= order.status_i18n %></td>
      <td><%= link_to "注文詳細", admin_order_path(order), class:"btn btn-primary" %></td>
    </tr>
    <% end %>
  </table>
</div>
