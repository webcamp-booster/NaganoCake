<h4 class="row m-5 ">
  <span class="bg-light bg-primary px-4">商品新規登録</span>
</h4>

<div class="row justify-content-center">
  <%= form_with model: [:admin, @item] do |f| %>
    <div class="form-group">
      <%= f.label :image, "商品画像", class: "mr-5" %>
      <%= f.file_field :image, accept: "image/*", class: "ml-2" %>
    </div>
  
    <div class="form-group">
      <%= f.label :name, "商品名　", class: "mr-5" %>
      <%= f.text_field :name, placeholder: "商品名", size: 30, class: "ml-2 " %>
    </div>
  
    <div class="form-group">
      <%= f.label :introduction, "商品説明", class: "mr-5 align-top" %>
      <%= f.text_area :introduction, rows: 5, placeholder: "ここに説明文を記述します", size: "33x10", class: "ml-2" %>
    </div>
  
    <div class="form-group">
      <%= f.label :jenre, "ジャンル", class: "mr-5" %>
  
    </div>
  
    <div class="form-group">
      <%= f.label :is_active, "税抜価格", class: "mr-5" %>
      <%= f.text_field :price, placeholder: "1000", size: 30, class: "ml-2" %>
    </div>
  
    <div class="form-group">
      <%= f.label :is_active, "販売ステータス" %>
      <%= f.radio_button :is_active, true, class: "ml-2" %> 販売中
      <%= f.radio_button :is_active, false, class: "ml-2" %> 販売停止中
    </div>
  
    <div class="form-group text-center">
      <%= f.submit "新規登録", class: "btn btn-success font-weight-bold px-5 py-2 " %>
    </div>
  
  <% end %>
</div>