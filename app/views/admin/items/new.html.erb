<h2>商品新規登録</h2>

<%= form_with model: [:admin, @item] do |f| %>
  <div class="form-group">
    <h4>商品画像</h4>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <h4>商品名</h4>
    <%= f.text_field :name, placeholder: "商品名" %>
  </div>

  <div class="form-group">
    <h4>商品説明</h4>
    <%= f.text_area :introduction, rows: 5, placeholder: "ここに説明文を記述します" %>
  </div>

  <div class="form-group">
    <h4>ジャンル</h4>

  </div>

  <div class="form-group">
    <h4>税抜価格</h4>
    <%= f.text_field :price, placeholder: "1000" %>
  </div>

  <div class="form-group">
    <h4>商品ステータス</h4>

  </div>

  <div class="form-group">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>

<% end %>

