<h4>ショッピングカート</h4>
<!-- カートを空にするボタン -->
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.image %>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= (cart_item.item.with_tax_price %>
        </td>
        <td>
          <!--数量のプルダウン-->
        </td>
        <td>
          <%= cart_item.subtotal %>
        </td>
        <td>
          <!-- 削除ボタン -->
        </td>
      </tr>
  </tbody>
</table>

