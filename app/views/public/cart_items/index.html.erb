<div class="container">
  <div class = "row">
    <h4>ショッピングカート</h4>
    <div class = "button ml-auto">
      <%= link_to "カートを空にする",destroy_all_path, method: :delete, class:"btn btn-danger mx-3" %>
    </div>
  </div>
  
    <table class="table table-bordered">
      <tr>
        <th scope = "col">商品名</th>
        <th scope = "col">単価(税込)</th>
        <th scope = "col">数量</th>
        <th scope = "col">小計</th>
        <th colspan="1"></th>
      </tr>

      <% total = 0 %>

    <% if current_customer.cart_items.present? %>

      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.image %>
            <%= cart_item.item.name %>
          </td>
          <td>
            <%= (cart_item.item.with_tax_price) %>
          </td>
          <td>
          <!--数量のプルダウン-->
            <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method:patch do |f| %>
              <%= f.number_field :amount, min: 1, max:10, id: "amount_cart" %>
              <%= f.submit "変更",class: "btn-sm btn-success" %>
            <% end %>
          </td>
          <td>
            <%= cart_item.subtotal %>
          </td>
          <td>
            <div class = "button">
              <%= link_to "削除", cart_item_path(cart_item.id,cart_item),method: :delete,class:"btn-sm btn-danger" %>
            </div>
          </td>
        </tr>
    </table>
  

        <% total += cart_item.subtotal %>
      <% end %>
    <% end %>
 

  
    <div class = "button">
      <%= link_to "買い物を続ける",items_path, class:"btn btn-primary" %>
    </div>
    <table class = "table table-bordered  w-25 ml-auto">
      <tr>
        <th>合計金額</th>
        <td><%= total %></td>
      </tr>
    </table>
  
  <div class = "row">
    <div class = "button mx-auto">
      <%= link_to "情報入力に進む",new_order_path, class:"btn btn-success " %>
    </div>
  </div>

</div>
