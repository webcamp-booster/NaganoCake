<div class="container">
  <div class="row">
<h4>ショッピングカート</h4>
<!-- カートを空にするボタン -->
<%= link_to "カートを空にする",destroy_all_path, method: :delete, class:"btn btn-sm btn-danger" %>

<table class="table">
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th colspan="1"></th>
    </tr>
  <% total = 0 %>

  <% if current_customer.cart_items.present? %>

    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.image %>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= (cart_item.item.with_tax_price) %>
        </td>
        <td>
          <!--数量のプルダウン-->
          <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method:patch do |f| %>
            <%= f.number_field :amount, min: 1, max:10, id: "amount_cart" %>
            <%= f.submit "変更",class: "btn-sm btn-success" %>
          <% end %>
        </td>
        <td>
          <%= cart_item.subtotal %>
        </td>
        <td>
          <!-- 削除ボタン -->
          <%= link_to "削除", cart_item_path(cart_item.id,cart_item),method: :delete,class:"btn-sm btn-danger" %>
        </td>
      </tr>
          <% total += cart_item.subtotal %>
      <% end %>
  <% end %>
    <tr>
      <th>合計金額</th>
      <td><%= total %></td>
    </tr>

</table>

<!-- 買い物を続けるボタン -->
<%= link_to "買い物を続ける",items_path, class:"btn-sm btn-primary" %>
<!-- 合計金額の表示 -->

<!-- 情報入力に進むボタン -->
<%= link_to "情報入力に進む",new_order_path, class:"btn-sm btn-success" %>
</div>
</div>
