<div class="container">
  <div class = "row">
    <h4>ショッピングカート</h4>
    <div class = "button ml-auto">
      <%= link_to "カートを空にする",destroy_all_path, method: :delete, class:"btn btn-danger mx-3" %>
    </div>
  </div>
  <div class = "row" >
    <table class="table table-bordered">
      <thead>
        <tr>
        <th class = "col-4">商品名</th>
        <th class = "col-2">単価(税込)</th>
        <th class = "col-2">数量</th>
        <th class = "col-2">小計</th>
        <th></th>
      </tr>
      </thead>


      <% total = 0 %>
      <% if current_customer.cart_items.present? %>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_image %>
            <%= cart_item.item.name %>
          </td>
          <td>
            <%= cart_item.item.add_tax_price %>
          </td>
          <td>
          <!--数量のプルダウン-->
            <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
              <%= f.number_field :amount, min: 1, max:10, id: "amount_cart" %>
              <%= f.submit "変更",class: "btn-sm btn-success" %>
            <% end %>
          </td>
          <td>
            <%= cart_item.subtotal %>
          </td>
          <td>
            <div class = "button">
              <%= link_to "削除", cart_item_path(cart_item.id),method: :delete,class:"btn-sm btn-danger" %>
            </div>
          </td>
        </tr>
         <% total += cart_item.subtotal %>
        <% end %>
      </tbody>
    <% end %>
    </table>



  </div>


  <div class = "row d-flex">
    <div class = "button col-2">
      <%= link_to "買い物を続ける",items_path, class:"btn btn-primary" %>
    </div>
    <div class = "col-6"></div>
    <table class = "table table-bordered  col-4 ml-auto">
      <tr>
        <th>合計金額</th>
        <td><%= total %></td>
      </tr>
    </table>
  </div>


  <div class = "row">
    <div class = "button mx-auto">
      <%= link_to "情報入力に進む",new_order_path, class:"btn btn-success " %>
    </div>
  </div>

</div>
