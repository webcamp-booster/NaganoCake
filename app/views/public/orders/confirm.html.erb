<div class="container">
  <h4>注文情報確認</h4>
  <div class = "row">
    <table class = "table table-bordered col-7">
      <tr>
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
      </tr>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_image %>
          <strong><%= cart_item.item.name %></strong>
        </td>
        <td>
          <%= cart_item.item.add_tax_price %>
        </td>
        <td>
          <%= cart_item.amount %>
        </td>
        <td>
          <%= cart_item.subtotal %>
        </td>
      </tr>
      <% @total = @total + cart_item.subtotal %>
      <% end %>
    </table>

    <table class = "table table-bordered offset-1 col-4">
      <tr>
        <th>送料</th>
        <% @order.shipping_cost %>
        <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th>商品合計</th>
        <td><%= @total %></td>
      <tr>
        <th>請求金額</th>
        <% @order.total_payment = @order.shipping_cost.to_i + @total.to_i %>
        <td><%= @order.total_payment %></td>
      </tr>
    </table>
  </div>
  <h4>支払方法</h4>
  <%= @order.payment_method_i18n %>
  <h4>お届け先</h4>
  〒<%= @order.post_code %><%= @order.address %><%= @order.name %>

  <div class="row justify-content-center">
    <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
      <%= f.hidden_field :customer_id %>
      <%= f.hidden_field :shipping_cost %>
      <%= f.hidden_field :total_payment %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :post_code %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :status %>
      <%= f.submit "注文を確定する" , class:"btn btn-success" %>
    <% end %>
  </div>
</div>