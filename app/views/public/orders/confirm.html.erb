 <h4>注文情報確認</h4>
 <div class = "row">
   <table class = "table table-bordered">
      <tr>
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
      </tr>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_image %>
          <strong><%= cart_item.item.name %></strong>
        </td>
        <td>
          <%= cart_item.item.add_tax_price %>
        </td>
        <td>
          <%= cart_item.amount %>
        </td>
        <td>
          <%= cart_item.subtotal %>
        </td>
      </tr>
    <% end %>
   </table>
 
 <table>
   <tr>
     <th>送料</th>
     <% @order.shipping_cost = 800 %>
     <td><%= @order.shipping_cost %></td>
   </tr>
   <tr>
     <th>商品合計</th>
     <td><%= total %></td>
   </tr>
   <tr>
     <th>請求金額</th>
     <% @order.total_payment = @order.shipping_cost + total %>
     <td><%= @order.total_payment %></td>
   </tr>
 </table>
 </div>
 