<div class="container">
    <div class="row py-2">
        <div class="col-10 offset-2">
            <h4>注文情報入力</h4>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <%= form_with model: @order, url: "/orders/confirm", method: :post, local: true do |f| %>
                <h5 class="font-weight-bold">支払い方法</h5>
                <p>
                <%= f.radio_button :payment_method, Order.payment_methods_i18n[:credit_card],  checked: "checked" %>
                <%= f.label :payment_method, "クレジットカード" %>
                <br>
                <%= f.radio_button :payment_method, Order.payment_methods_i18n[:transfer] %>
                <%= f.label :payment_method, "銀行振込" %>
                </p>
                <h5 class="font-weight-bold">お届け先</h5>

                    <%= f.radio_button :address_option, 0, checked: "checked" %>
                    <%= f.label :order_address, "ご自身の住所" %>
                <br>
                    〒<%= current_customer.post_code %>
                    <%= current_customer.address %><br>
                    <%= current_customer.last_name %>
                    <%= current_customer.first_name %>
                <br>
                    <%= f.radio_button :address_option, 1 %>
                    <%= f.label :order_address, "登録済住所から選択" %>
                <br>
                    <%= f.select :customer_id, @addresses.map { |m| [["〒",m.post_code, m.address, m.name].join(" "), m.id] } ,include_blank: "登録してある配送先住所から選択" %>
                <br>
                    <%= f.radio_button :address_option, 2 %>
                    <%= f.label :order_address, "新しいお届け先" %>
                <table>
                    <tr>
                        <td class='col-3'><%= f.label :post_code, "郵便番号(ハイフンなし)" %></td>
                        <td class='col-9'><%= f.text_field :post_code, :placeholder => "0000000"%></td>
                    </tr>
                    <tr>
                        <td class='col-3'><%= f.label :address, "住所" %></td>
                        <td class='col-9'><%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0", class: "w-100" %></td>
                    </tr>
                    <tr>
                        <td class='col-3'><%= f.label :name, "宛名" %></td>
                        <td class='col-9'><%= f.text_field :name, :placeholder => "令和道子" %></td>
                    </tr>
                </table>
                    <div class="row justify-content-center py-5">
                        <%= f.submit "確認画面へ進む" , class:"btn btn-primary" %>
                    </div>
                <% end %>
        </div>
    </div>

</div>
