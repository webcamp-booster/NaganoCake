<div class="container my-5">
  <h4 class="row mb-5">
    <span class="heading-title">注文履歴一覧</span>
  </h4>

  <div class='row'>
    <table class='table table-bordered'>

      <thead>
        <tr class='table-secondary'>
          <th class='col-2'>注文日</th>
          <th class='col-3'>配送先</th>
          <th class='col-2'>注文商品</th>
          <th class='col-1'>支払金額</th>
          <th class='col-2'>ステータス</th>
          <th class='col-2'>注文詳細</th>
        </tr>
      </thead>
      <% if @orders.present? %>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%y/%m/%d') %></td>
              <td>
                〒<%= order.post_code %></br>
                <%= order.address %></br>
                <%= order.name %>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %></br>
                <% end %>
              </td>
              <td><%= order.total_payment.to_s(:delimited) %>円</td>
              <td><%= order.status_i18n %></td>
              <td><%= link_to '表示する', order_path(order.id), class: 'btn btn-sm btn-primary mx-auto' %></td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
  
    </table>
  </div>
  

</div>
