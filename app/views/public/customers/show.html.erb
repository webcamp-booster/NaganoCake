<div class='container my-5'>

  <h4 class='row mb-5'>
    <span class='heading-title'>マイページ</span>
  </h4>

  <div class='row my-3'>
    <div class='col-1'>
      <strong>登録情報</strong>
    </div>
    <div class='col-3'>
      <%= link_to '編集する', edit_customer_path, class: 'btn btn-success' %>
    </div>
  </div>
  <div class='row'>

    <table class='table table-bordered secondary col-8'>
      <tr>
        <th class='col-2'>氏名</th>
        <td class='col-5'><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td>〒<%= @customer.post_code.insert(3,'-') %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>

  </div>
  <div class='row my-3'>
    <div class='col-1'>
      <strong>配送先</strong>
    </div>
    <div class='col-3'>
      <%= link_to '一覧を見る', addresses_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <div class='row my-3'>
    <div class='col-1'>
      <strong>注文履歴</strong>
    </div>
    <div class='col-3'>
      <%= link_to '一覧を見る', orders_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
